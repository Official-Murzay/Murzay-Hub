-- Rayfield UI
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Window = Rayfield:CreateWindow({
    Name = "Spo0k Hub | v1.0",
    LoadingTitle = "Spo0k Hub | v1.0",
    LoadingSubtitle = "by Spo0kzay",
    ConfigurationSaving = {
        Enabled = false
    },
    KeySystem = false
})

-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- Variables
local KillAura = false

-- Tab
local FarmTab = Window:CreateTab("Farm", 4483362458)

-- Kill Aura Toggle
FarmTab:CreateToggle({
    Name = "Kill Aura",
    CurrentValue = false,
    Flag = "KillAuraToggle",
    Callback = function(Value)
        KillAura = Value
    end,
})

-- Kill Aura Logic
task.spawn(function()
    while task.wait(0.2) do
        if KillAura then
            for _, mob in ipairs(workspace:GetDescendants()) do
                if mob:IsA("Model") and mob:FindFirstChild("Humanoid") and mob:FindFirstChild("HumanoidRootPart") then
                    if mob ~= player.Character and mob.Humanoid.Health > 0 then
                        -- instant kill
                        mob.Humanoid.Health = 0
                    end
                end
            end
        end
    end
end)

-- TP to Monster Button
FarmTab:CreateButton({
    Name = "TP to Monster",
    Callback = function()
        local char = player.Character
        if not char or not char:FindFirstChild("HumanoidRootPart") then return end

        for _, mob in ipairs(workspace:GetDescendants()) do
            if mob:IsA("Model") and mob:FindFirstChild("HumanoidRootPart") and mob:FindFirstChild("Humanoid") then
                if mob.Humanoid.Health > 0 then
                    char.HumanoidRootPart.CFrame = mob.HumanoidRootPart.CFrame * CFrame.new(0, 0, -3)
                    break
                end
            end
        end
    end,
})
